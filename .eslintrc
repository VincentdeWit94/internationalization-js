{
    "extends": "airbnb/base",
    "env": {
        "mocha": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "parserOptions": {
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "arrow-parens": [0, "as-needed"],
        "global-require": [0],
        "indent": [2, 2, {"SwitchCase": 1}]
    }
  }